# Site Configuration
NEXT_PUBLIC_SITE_URL=https://steadyspend.com

# ReSend API Key
# Get your API key from https://resend.com/api-keys
RESEND_API=your_resend_api_key_here

# Your email address where contact form submissions will be sent
CONTACT_EMAIL=your_email@example.com

# From address (sender)
# Must be from your verified domain (steadyspend.com)
# Example: contact@steadyspend.com or noreply@steadyspend.com
FROM_EMAIL=contact@steadyspend.com

# Google Tag Manager
# Get your GTM ID from https://tagmanager.google.com
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXXX

# Google AdSense
# Get your AdSense client ID from https://www.google.com/adsense
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXX
NEXT_PUBLIC_ADSENSE_ENABLED=false
NEXT_PUBLIC_ADSENSE_SLOT_ID=your_slot_id_here
